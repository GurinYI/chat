<link rel="stylesheet" href="/partials/user-profile/user-profile.scss" />
<div class="user_profile">
    <div class="user_profile__avatar"></div>
    {{#> headers/h3 class="user_profile__name"}}Иван{{/headers/h3}}
    {{#> profile-input/profile-input label="Почта" placeholder="pochta@yandex.ru" type="email" name="email"}}{{/profile-input/profile-input}}
    {{#> profile-input/profile-input label="Логин" placeholder="ivanivanov" type="text" name="login"}}{{/profile-input/profile-input}}
